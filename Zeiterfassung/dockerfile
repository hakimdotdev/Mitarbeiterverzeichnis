FROM mcr.microsoft.com/dotnet/runtime:5.0

RUN apt-get update && apt-get install -y mysql-server

# Install any other required packages
RUN apt-get install -y <package1> <package2> ...

# Clone the repository and copy the app and its dependencies to the image
RUN git clone https://github.com/user/WindowsFormsApp8.git
COPY repo/ /app
WORKDIR /app

# Expose the necessary ports for the app and MySQL server
EXPOSE 3306
EXPOSE <app_port>

# Run the app and MySQL server when the container starts
CMD service mysql start && dotnet <app_name>.dll
